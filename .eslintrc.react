{
	"extends": ["./.eslintrc.base", "plugin:react/recommended"],

    "env": {
        "es6": true,
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
        }
    },

    "plugins": ["react"],

    "rules": {
        "react/display-name": 0,
        "react/prefer-stateless-function": 0,
        "react/jsx-indent-props": [2, 4],
    },
}